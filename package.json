{
  "name": "node-modules-dependencies-extractor",
  "version": "0.0.1",
  "description": "Extracts dependencies from the node_modules folder, to a reference format. This reference format is a JSON file containing arrays of objects with keys name and version.",
  "main": "index.js",
  "scripts": {
    "lint": "yarn standard",
    "lint:fix": "yarn standard --fix",
    "test": "jest src --passWithNoTests",
    "coverage": "jest --coverage src",
    "extract": "./src/cli-extract.js"
  },
  "author": "Sanda Contiu",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "jest": "^24.1.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "csvtojson": "^2.0.8",
    "fs-extra": "^7.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**.js",
      "src/**/*.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/cli-extract.js",
      "!**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/public/**"
    ],
    "envs": [
      "es6",
      "browser",
      "jest"
    ]
  },
  "keywords": [
    "dependencies",
    "sbom",
    "software bill of material",
    "node_modules",
    "npm",
    "yarn"
  ]
}
